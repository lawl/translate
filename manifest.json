{
    "manifest_version": 2,
    "name": "LibreTranslate",
    "version": "1.0",
    "description": "translate stuff via a libretranslate service",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "background": {
        "scripts": [
            "common.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_popup": "popup.html",
        "default_title": "LibreTranslate"
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}