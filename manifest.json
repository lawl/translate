{
    "manifest_version": 3,
    "name": "Transl8 m8",
    "version": "1.0",
    "description": "translate stuff via a libretranslate service",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_popup": "popup.html",
        "default_title": "transl8 m8"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ]
}
